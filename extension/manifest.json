{
    "manifest_version": 3,
    "name": "Shield AdBlocker",
    "version": "1.0.0",
    "description": "A simple ad blocker extension that removes ads from websites.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.svg",
            "48": "icon.svg",
            "128": "icon.svg"
        }
    },
    "icons": {
        "16": "icon.svg",
        "48": "icon.svg",
        "128": "icon.svg"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}